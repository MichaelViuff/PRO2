<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="100.0" prefWidth="192.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InputFieldsView">
   <children>
      <VBox prefHeight="63.0" prefWidth="100.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="35.0" text="Red:" />
                  <TextField fx:id="redField" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Green:" />
                  <TextField fx:id="greenField" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="52.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="36.0" text="Blue:" />
                  <TextField fx:id="blueField" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0" />
      <HBox prefHeight="25.0" prefWidth="183.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onButtonStartPressed" text="Start" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onButtonStopPressed" text="Stop" />
         </children>
      </HBox>
   </children>
</VBox>
